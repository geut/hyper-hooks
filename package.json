{
  "name": "@geut/hyper-hooks",
  "version": "1.0.0-beta.9",
  "description": "React hooks for hyper world",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && babel ./src --out-dir ./dist/esm --ignore \"**/*.test.js\"",
    "clean": "rimraf dist",
    "lint": "standard",
    "test": "jest --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "dependencies": {
    "@geut/discovery-swarm-webrtc": "^4.1.3",
    "@geut/hyperbee-live-stream": "^1.0.1",
    "buffer-json-encoding": "^1.0.2",
    "pump": "^3.0.0",
    "random-access-idb": "^1.2.1",
    "random-access-memory": "^3.1.2",
    "use-deep-compare-effect": "^1.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "7.12.1",
    "@testing-library/react-hooks": "^5.0.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "husky": "^4.3.0",
    "hyperbee": "^1.5.3",
    "hypercore": "^9.9.1",
    "hypercore-crypto": "^2.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.0",
    "proc-nexttick": "^1.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "standard": "^15.0.0"
  },
  "peerDependencies": {
    "hyperbee": "^1.5.3",
    "hypercore": "^9.7.5",
    "hypercore-crypto": "^2.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "dist"
    ],
    "env": [
      "browser",
      "jest"
    ]
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
